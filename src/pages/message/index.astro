---
import IndexPage from "src/layouts/IndexPage.astro";
let posts = await Astro.glob("./message.md");
import PostViewTitle from "src/components/PostViewTitle.astro";
let { frontmatter, Content } = posts[0];
---

<IndexPage frontmatter={frontmatter}>
  <PostViewTitle
    title={frontmatter.title}
    date={frontmatter.date}
    tags={frontmatter.tags}
    category={frontmatter.category}
    isSticky={frontmatter.sticky}
  />
  <article class="markdown-body">
    <Content />
  </article>
</IndexPage>
